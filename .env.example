# ===========================================
# File Depot - Environment Configuration
# ===========================================
# Copy this file to .env and configure for your environment
# Lines starting with # are comments, uncomment and set values as needed

# ===========================================
# Server Configuration
# ===========================================
SERVER_PORT=8080
MANAGEMENT_PORT=8081

# ===========================================
# Spring Profile
# ===========================================
# Options: (default), prod
# SPRING_PROFILES_ACTIVE=prod

# ===========================================
# File Upload Limits
# ===========================================
# MAX_FILE_SIZE=100MB
# MAX_REQUEST_SIZE=100MB

# ===========================================
# Database (MariaDB) - Required in prod profile
# ===========================================
# MARIADB_URL=jdbc:mariadb://localhost:3306/file_depot
# MARIADB_USER=root
# MARIADB_PASSWORD=your_password
# DB_POOL_SIZE=10
# DDL_AUTO=update

# ===========================================
# MinIO (Object Storage) - Required in prod profile
# ===========================================
# MINIO_URL=http://localhost:9000
# MINIO_ACCESS_KEY=minioadmin
# MINIO_SECRET_KEY=minioadmin
# MINIO_BUCKET=file-depot

# ===========================================
# Parsekit - Document Processing
# ===========================================
# PARSEKIT_SCENARIO options:
#   disabled  - No document processing (default)
#   scenario1 - Converter -> Docling -> VLM
#   scenario2 - Converter -> VLM (direct)
PARSEKIT_SCENARIO=disabled
# PARSEKIT_CONVERTER_URL=http://localhost:3000
# PARSEKIT_DOCLING_URL=http://localhost:5001
# PARSEKIT_VLM_URL=http://localhost:8000
# PARSEKIT_VLM_MODEL=Qwen/Qwen2.5-VL-7B-Instruct

# ===========================================
# EmbedKit - Text Embedding
# ===========================================
# EMBEDKIT_PROVIDER options:
#   none  - No embedding (default)
#   vllm  - VLLM-based embedding
#   luxia - Luxia embedding service
EMBEDKIT_PROVIDER=none

# VLLM Embedding Configuration
# EMBEDKIT_VLLM_URL=http://localhost:8000
# EMBEDKIT_VLLM_MODEL=BAAI/bge-m3
# EMBEDKIT_VLLM_BATCH_SIZE=32

# Luxia Embedding Configuration
# EMBEDKIT_LUXIA_URL=http://localhost:8080
# EMBEDKIT_LUXIA_BATCH_SIZE=32

# ===========================================
# Processing Configuration
# ===========================================
# PROCESSING_WORKER_THREADS=4
# PROCESSING_QUEUE_CAPACITY=1000
# PROCESSING_MAX_RETRY_COUNT=3

# Chunking Configuration
# PROCESSING_CHUNK_SIZE=512
# PROCESSING_CHUNK_OVERLAP=100

# ===========================================
# Batch Processing
# ===========================================
# PROCESSING_BATCH_ENABLED=true
# PROCESSING_BATCH_SIZE=100
# PROCESSING_BATCH_EXTRACT_CRON=0 */5 * * * *
# PROCESSING_BATCH_CHUNK_CRON=0 */5 * * * *
# PROCESSING_BATCH_EMBED_CRON=0 */5 * * * *
# PROCESSING_BATCH_ORPHAN_CLEANUP_CRON=0 0 3 * * *

# ===========================================
# Consul (Service Discovery) - prod profile only
# ===========================================
# CONSUL_ENABLED=false
# CONSUL_HOST=localhost
# CONSUL_PORT=8500
# CONSUL_ACL_TOKEN=
# DISCOVERY_HOST=localhost
